@page
@model WebApplication1.Pages.SignUpModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <title>Sign up Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Sign up</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input name="Iusername" type="text" class="form-control" placeholder="username">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input name="Ipassword" type="password" class="form-control" placeholder="password">
                        </div>
                        <div class="input-group form-group">
                            <input name="Ifirstname" type="text" class="form-control" placeholder="First name">
                        </div>
                        <div class="input-group form-group">
                            <input name="Ilastname" type="text" class="form-control" placeholder="Last name">
                        </div>
                        <div class="input-group form-group">
                            <input name="Iemail" type="text" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input type="submit" onclick="" value="Create user" class="btn btn-info login_btn">
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Allready have an account?<a asp-page="Login">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>